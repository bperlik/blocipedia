<% if user_is_authorized_to_create? %>
<h1>Create a new Wiki</h1>

<div class="row">
  <div class="col-md-4">
    <p>Share your wikis:</p>
    <ul>
      <li>Create as many public wikis as you like.</li>
      <li>Upgrade to 'premium' to be able to make
         private wikis and select your collaborators!</li>
    </ul>
    </div>
    <div class="col-md-8">
      <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <div class="form-group">
         <%= f.label :private, class: 'checkbox' do %>
           <%= f.check_box :private %> Make Private
         <% end %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
</div>
<% end %>


