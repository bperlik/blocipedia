<h1>All Wikis</h1>

<div class="row">
  <div class="col-md-8">
    <ul class="list-unstyled">
      <% @wikis.each do |wiki| %>
        <li><%= link_to wiki.title, wiki_path(wiki) %></li>
      <% end %>
    </ul>
  </div>
  <% if user_is_authorized_to_create? %>
    <div class="col-md-4">
      <%= link_to "Create a new Wiki", new_wiki_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
