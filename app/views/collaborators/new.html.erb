<h1>Add Collaborators</h1>
<%= form_for [@wiki, @collaborator]  do |f| %>

  <div class= 'form-group'>
    <%= f.hidden_field :wiki_id, :value => params[:wiki_id] %>
    <% @current_collaborators = @wiki.collaborators %>
    <% @not_current_collaborators = @wiki.possible_collaborators %>

    <%= f.label "Select new collaborator", class: 'form-label' %>
    <%= f.select 'user_id', options_from_collection_for_select(@not_current_collaborators, 'id', 'email') %>
  </div>

  <div class='form-group'>
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>

<% end %>
